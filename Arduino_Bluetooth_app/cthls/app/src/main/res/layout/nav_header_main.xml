<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/side_nav_bar"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:weightSum="1"
    app:layout_collapseParallaxMultiplier="0.8"
    app:layout_scrollFlags="scroll|exitUntilCollapsed|enterAlways|enterAlwaysCollapsed|snap"
    android:layout_height="160dp">

    <ImageView
        android:id="@+id/imageView"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        app:srcCompat="@mipmap/icon_laucher"
        android:layout_height="75dp"
        android:cropToPadding="true"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:visibility="visible"
        tools:style="@style/Animation.AppCompat.Dialog"
        android:soundEffectsEnabled="true"
        android:maxHeight="150dp"
        android:maxWidth="150dp"
        android:minHeight="174dp"
        android:layout_width="75dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="Hương Cam Táo Arduino"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textStyle="normal|bold"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Điều kiển vạn vật theo cách riêng của bạn"
        android:textSize="13sp" />

</LinearLayout>
